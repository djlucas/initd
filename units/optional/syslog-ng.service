[Unit]
Description=System Logger Daemon (syslog-ng)
Documentation=man:syslog-ng(8)
DefaultDependencies=no
After=mountvirtfs.service
Before=basic.target
Conflicts=shutdown.target syslogd.service klogd.service rsyslog.service
Provides=$syslog

[Service]
Type=notify
ExecStart=/usr/sbin/syslog-ng -F
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
StandardOutput=null

[Install]
WantedBy=basic.target
