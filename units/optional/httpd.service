[Unit]
Description=Apache Web Server
After=network.target remote-fs.target nss-lookup.target

[Service]
Type=forking
ExecStart=@SBINDIR@/apachectl start
ExecStop=@SBINDIR@/apachectl graceful-stop
ExecReload=@SBINDIR@/apachectl graceful
PrivateTmp=true
LimitNOFILE=infinity

[Install]
WantedBy=multi-user.target
