[Unit]
Description=Netfilter Tables
Documentation=man:nft(8)
Wants=network-pre.target
Before=network-pre.target

[Service]
Type=oneshot
ExecStart=@SBINDIR@/nft -f @SYSCONFDIR@/nftables/nftables.conf
ExecReload=@SBINDIR@/nft flush ruleset ';' include '"@SYSCONFDIR@/nftables/nftables.conf"'
ExecStop=@SBINDIR@/nft flush ruleset
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target

