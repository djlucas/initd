[Unit]
Description=D-Bus System Message Bus
Documentation=man:dbus-daemon(1)
Requires=dbus.socket
Provides=dbus messagebus

[Service]
Type=forking
ExecStartPre=@BINDIR@/dbus-uuidgen --ensure
ExecStart=@BINDIR@/dbus-daemon --system --fork
ExecReload=@BINDIR@/dbus-send --print-reply --system --type=method_call --dest=org.freedesktop.DBus / org.freedesktop.DBus.ReloadConfig
Restart=on-failure

[Install]
WantedBy=multi-user.target
