[Unit]
Description=Getty on %I
Documentation=man:agetty(8)
After=sysinit.target
Before=multi-user.target

[Service]
Type=idle
ExecStart=@SBINDIR@/agetty --noclear %I 38400 linux
StandardInput=tty-force
StandardOutput=tty
StandardError=tty
TTYPath=/dev/%I
Restart=always
RestartSec=0

# Job control is required for getty
IgnoreSIGHUP=no

[Install]
WantedBy=multi-user.target
